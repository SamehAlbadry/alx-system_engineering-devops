#!/bin/bash

# Define a recursive function to count the number of directories
count_dirs() {
    # Loop through all items in the current directory
    for item in "$1"/*; do
        # Check if the item is a directory (not a file or a symlink)
        if [ -d "$item" ] && [ ! -L "$item" ]; then
            # Increment the directory count
            ((dir_count++))
            # Recursively call the function on the subdirectory
            count_dirs "$item"
        fi
    done
}

# Initialize the directory count to 0
dir_count=0

# Call the count_dirs function on the current directory, excluding the parent directory
count_dirs "$(pwd)"

# Subtract 1 from the directory count to exclude the current directory
((dir_count--))
